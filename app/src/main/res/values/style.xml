<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="EstiloEditText" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/blancocrema</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/verdeclaro</item>
        <item name="android:textColorHint">@color/verdeclaro</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/verdeclaro</item> <!-- Verde -->
        <item name="android:textColorPrimary">@color/verdeclaro</item>
        <item name="android:textColorSecondary">@color/verdeclaro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/blancocrema</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/verdeclaro</item>
        <item name="android:textColor">@color/verdeclaro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CheckButtonStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/verdeclaro</item>
        <item name="android:textColor">@color/verdeclaro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/verdeclaro</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:backgroundTint">@color/blancocrema</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@color/verdeoscuro</item>
        <item name="android:textColorHint">@color/verdeoscuro</item>
        <item name="android:tint">@color/verdeoscuro</item>
    </style>

</resources>